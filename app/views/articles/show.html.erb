<h1 class="text-center">Title: <%= @article.title %></h1>

<div class="well">
  <p class="lead">Description:</p>
  <hr />
  <%= simple_format(@article.description) %>
  <hr />
  <%= link_to 'Edit', edit_article_path, class: 'btn btn-xs btn-primary' %>
  <%= link_to 'Delete', article_path, method: :delete, data: {confirm: 'Are You Sure?'}, class: 'btn btn-xs btn-danger' %>
</div>
