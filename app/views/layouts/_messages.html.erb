<div class="row">
  <div class="col-md-12 flash-message">
    <% flash.each do |name, msg| %>
      <h4 class='alert alert-<%= "#{name}" %>'>
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </h4>
    <% end %>
  </div>
</div>
